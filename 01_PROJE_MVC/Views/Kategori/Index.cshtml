@model IEnumerable<MakaleEntities.Kategori>

@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>Kategoriler</h2>
        <hr />
    </div>
</div>
<div class="rowd">
    <p>
        @Html.ActionLink("Yeni Kayıt", "Create", null, new { @class = "btn btn-success" })
    </p>
</div>


<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Baslik)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Aciklama)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KayitTarihi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DegistirmeTarihi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DegistirenKullanici)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Baslik)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Aciklama)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KayitTarihi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DegistirmeTarihi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DegistirenKullanici)
                    </td>
                    <td>
                        @MyHelper.LinkButton("/Kategori/Edit/" + item.ID, "link", "success", "btn-xs", "edit", "Düzenle")
                        @MyHelper.LinkButton("/Kategori/Details/" + item.ID, "link", "warning", "btn-xs", "search", "Detay")
                        @MyHelper.LinkButton("/Kategori/Delete/" + item.ID, "link", "danger", "btn-xs", "trash", "Sil")

                        @*@Html.ActionLink("Duzenle", "Edit", new { id = item.ID }, new { @class = "btn btn-success btn-xs" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-warning btn-xs" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-xs" })*@
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
@using MakaleEntities.viewmodel
@model loginModel
@{
    ViewBag.Title = "login";
}

@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Giriş Yap</h1>
                </div>
                <div class="main-content">

                    @Html.ValidationSummary(false)

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control", placeholder = "Kullanıcı Adınızı Giriniz" })

                        @*<input id="email" type="text" class="form-control" name="email" placeholder="Kullanıcı Adınızı Giriniz">*@
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", placeholder = "Şifrenizi Giriniz" })

                        @*<input id="password" type="password" class="form-control" name="password" placeholder="Parolanızı giriniz.">*@
                    </div>

                    <div class="checkbox">
                        <label class="remember">
                            <input name="remember" type="checkbox"> Beni Hatırla
                        </label>
                    </div>

                    <div class="form-group ">
                        <button type="submit" class="btn btn-danger btn-lg btn-block login-button">Giriş Yap</button>
                    </div>

                </div>
            </div>
        </div>
    </section>

}

@section footer{
    @Html.Partial("_PartialPageFooter")
}
@using MakaleEntities.viewmodel
@model RegisterModel

@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Giriş Formu</h1>
                </div>
                <div class="main-content">

                    @Html.ValidationSummary(false)

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control", placeholder = "Kullanıcı Adı Giriniz" })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "ornek@mail.com" })
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", placeholder = "Şifre Giriniz" })
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(x => x.Sifre2, new { @class = "form-control", placeholder = "Şifre tekrar giriniz" })
                    </div>

                    <div class="form-group ">
                        <button type="submit" class="btn btn-danger btn-lg btn-block login-button">Kayıt Olun</button>
                    </div>

                </div>
            </div>
        </div>
    </section>

}

@section footer{
    @Html.Partial("_PartialPageFooter")
}